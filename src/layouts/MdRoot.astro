---
import HtmlRoot from "./HtmlRoot.astro"

interface Props {
  frontmatter: Partial<Record<string, string>>
}

const {
  frontmatter: { title, description },
} = Astro.props
---

<HtmlRoot
  title={title!}
  description={description}
  class="prose prose-sky mx-auto my-6 max-w-prose px-4 sm:my-12 md:my-16"
>
  <slot />
</HtmlRoot>
