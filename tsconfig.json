{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "allowJs": true
  },
  "include": ["src/"]
}
